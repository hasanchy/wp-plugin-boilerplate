	"bugs": {
		"url": "https://github.com/hasanchy/wp-plugin-boilerplate/issues"
	},
	"homepage": "https://github.com/hasanchy/wp-plugin-boilerplate#readme",
	"dependencies": {
		"@reduxjs/toolkit": "^1.9.5",
		"@wordpress/i18n": "^5.1.0",
		"antd": "^5.15.0",
		"axios": "^1.3.2",
		"react-error-boundary": "^4.0.9",
		"react-redux": "^8.0.5"
	},
	"devDependencies": {
		"@wordpress/scripts": "^25.3.0",
		"cross-env": "^7.0.3",
		"grunt": "^1.0.4",
		"grunt-checktextdomain": "^1.0.1",
