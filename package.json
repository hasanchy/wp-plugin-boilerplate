{
	"name": "wp-plugin-boilerplate",
	"version": "1.0.0",
	"description": "A WordPress plugin that allows users to draw and display pixel art on their website.",
	"main": "index.js",
	"scripts": {
		"start": "cross-env NODE_ENV=development wp-scripts start src/pixelart-page/main.js --hot",
		"compile": "cross-env NODE_ENV=production wp-scripts build src/pixelart-page/main.js",
		"build": "grunt preBuildClean && npm run compile && grunt build:pro && grunt finish"
	},
	"repository": {
		"type": "git",
		"url": "git+https://hasanchy@github.com/hasanchy/wp-plugin-boilerplate.git"
	},
